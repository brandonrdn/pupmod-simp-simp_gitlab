<%- |
Simplib::Netlist      $allowed_nets = ['127.0.0.1/32'],
Simplib::Netlist      $denied_nets  = [],
Variant[String,Undef] $module_name  = undef,
| -%>
# This file is managed by Puppet<%=
  if defined( '$module_name' ){
    "(module '$module_name')"
  }
%>

location / {
<% $allowed_nets.each |$net| { %>
    allow <%= $net %>;
<%- } %>
<% $denied_nets.each |$net| { %>
    deny <%= $net %>;
<%- } %>
    deny all;
}
